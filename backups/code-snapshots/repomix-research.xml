        ])
        
        return random.choice(safe_responses)
    
    def _get_template_response(self, buyer_message: str, context: Dict) -> str:
        """Get template-based response"""
        
        self.fallback_stats['template_uses'] += 1
        
        # Analyze message to determine intent
