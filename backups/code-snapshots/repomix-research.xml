class ConversationAnalyzer:
    """Analizador de patrones de conversaci√≥n"""
    
    @staticmethod
    def detect_urgency(message: str) -> float:
        """Detecta nivel de urgencia en mensaje (0-1)"""
        urgency_keywords = [
            ('urgente', 0.9),
