        if any(word in message_lower for word in ["whatsapp", "telegram", "tel√©fono"]):
            return random.choice(self.templates.get("respuestas_seguridad", {}).get("no_whatsapp", ["Prefiero mantener la comunicaci√≥n por Wallapop"]))
        
